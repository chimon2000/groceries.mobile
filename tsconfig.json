{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "inlineSourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "filesGlob": [
        "app/**/*.ts",
        "!./node_modules/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}